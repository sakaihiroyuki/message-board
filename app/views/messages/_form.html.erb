<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
 
  <div class="form-group">
    <!-- エラーメッセージ -->
      <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <!--　エラーメッセージ終わり -->
    
    <label for="message_name" class="control-label col-sm-2">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_body" class="control-label col-sm-2">内容：</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>  

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-block btn-primary" %>
    </div>
  </div>
<% end %>